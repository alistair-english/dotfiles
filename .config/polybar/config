; Colours from onedark atom theme
[color]
    black_01 = #282C34
    dark_black = #14161a
    red_02 = #E06C75
    green_03 = #98C379
    yellow_04 = #E5C07B
    blue_05 = #61AFEF
    indigo_06 = #C678DD
    aqua_07 = #56B6C2
    grey_08 = #ABB2BF

    transparent = #00000000

[barconf]
    top_bar_height = 30
    top_bar_offset = 10
    top_spacer_height = 40
    bar_top_gap = 10
    bar_side_gap = 20

[global/wm]
    ; Adjust the _NET_WM_STRUT_PARTIAL top value
    ;   Used for top aligned bars
    margin-bottom = 0

    ; Adjust the _NET_WM_STRUT_PARTIAL bottom value
    ;   Used for bottom aligned bars
    margin-top = 0

[base]
    background = ${color.transparent}
    foreground = ${color.black_01}

    font-0 = IBM Plex Sans:regular:size=12;3
    font-1 = Font Awesome 5 Free;4 
    font-2 = Font Awesome 5 Brands;4

    width = 100%
    height = ${barconf.top_bar_height}

    border-color = ${color.transparent}

    module-margin = 0

[bar/top]
    inherit = base

    ; Put the bar at the top of the screen
    bottom = false

    ; Prefer fixed center position for the `modules-center` block
    ; When false, the center position will be based on the size of the other blocks.
    ; fixed-center = true

    modules-left = date i3
    ; modules-center =
    modules-right = tray-label

    ; The separator will be inserted between the output of each module
    ;separator =

    ; Number of spaces to add before/after each module
    ; Individual side values can be defined using:
    ;   module-margin-{left,right}
    ; module-margin = 0

    border-top-size = ${barconf.bar_top_gap}
    border-bottom-size = 0
    border-left-size = ${barconf.bar_side_gap}
    border-right-size = ${barconf.bar_side_gap}

    tray-position = right
    tray-background = ${color.grey_08}

[module/tray-label]
    type = custom/text
    content = 
    content-background = ${color.black_01}
    content-foreground = ${color.grey_08}
    content-padding = 2

[module/date]
    type = internal/date

    ; Seconds to sleep between updates
    interval = 1.0

    ; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
    ; NOTE: if you want to use syntax tags here you need to use %%{...}
    date = 
    date-alt = %F

    ; Optional time format
    time = %H:%M:%S
    time-alt = 
    
    format =   <label>
    format-background = ${color.black_01}
    format-foreground = ${color.grey_08}
    format-padding = 2
    

    label = %date% %time%
    label-background = ${color.green_03}
    label-foreground = ${color.black_01}
    label-padding = 2

[module/i3]
    type = internal/i3

    index-sort = true
    enable-scroll = false
    wrapping-scroll = false

    ; Available tags:
    ;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
    ;   <label-mode> (default)
    format = <label-state> <label-mode>

    ; Available tokens:
    ;   %mode%
    ; Default: %mode%
    label-mode = %mode%
    label-mode-padding = 2
    label-mode-background = ${color.red_02}
    label-mode-foreground = ${color.black_01}

    ; Available tokens:
    ;   %name%
    ;   %icon%
    ;   %index%
    ;   %output%
    ; Default: %icon%  %name%
    label-focused = %index%
    label-focused-padding = 2
    label-focused-background = ${color.blue_05}
    label-focused-foreground = ${color.black_01}


    ; Available tokens:
    ;   %name%
    ;   %icon%
    ;   %index%
    ;   %output%
    ; Default: %icon%  %name%
    label-unfocused = %index%
    label-unfocused-padding = 2
    label-unfocused-background = ${color.grey_08}
    label-unfocused-foreground = ${color.black_01}

    ; Available tokens:
    ;   %name%
    ;   %icon%
    ;   %index%
    ;   %output%
    ; Default: %icon%  %name%
    label-visible = %index%

    ; Available tokens:
    ;   %name%
    ;   %icon%
    ;   %index%
    ;   %output%
    ; Default: %icon%  %name%
    label-urgent = %index%
    label-urgent-background = ${color.red_02}